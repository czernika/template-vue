{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "src/**/*",
        "src/**/*.vue"
    ],
    "compilerOptions": {
        "ignoreDeprecations": "5.0", // silence error from `tsconfig.web.json` config

        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "types": [
            "vite-plugin-pages/client",
            "vite-plugin-vue-layouts/client"
        ],
        "typeRoots": ["./src/types"]
    }
}
